<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
<!-- 
Include your PyVCP panel here.
The contents of this file will not be overwritten when you run stepconf again.
-->
 <vbox>
    <label>
	<text>"Spindle Speed:"</text>
   </label>
	<bar>
	  <halpin>"spindle-speed"</halpin>
	  <max_>6000</max_>
	</bar>
    <hbox>
	    <led halpin="spindle-at-speed" on_cplor="yellow" off_color="black"/>
	    <label text="At Speed"/>
    </hbox>
	<hbox>
	<label>
	<text>"Cycle Time"</text>
	<font>("Helvetica",14)</font>
	</label>
	<u32>
	<halpin>"time-hours"</halpin>
	<font>("Helvetica",14)</font>	
	<format>"2d"</format>
	</u32>
	<label>
	<text>":"</text>
	<font>("Helvetica",14)</font>
	</label>
	
	<label>
	<font>("Helvetica",14)</font>
	</label>
	<u32>
	<halpin>"time-minutes"</halpin>
	<font>("Helvetica",14)</font>	
	<format>"2d"</format>
	</u32>
	<label>
	<text>":"</text>
	<font>("Helvetica",14)</font>
	</label>
	
	<label>
	<font>("Helvetica",14)</font>
	</label>
	<u32>
	<halpin>"time-seconds"</halpin>
	<font>("Helvetica",14)</font>	
	<format>"2d"</format>
	</u32>
	<label>
	<text>":"</text>
	<font>("Helvetica",14)</font>
	</label>
	</hbox>	
	
	<hbox>
	<label>
	<text>"------------------------------"</text>
	<font>("Helvetica",14)</font>
	</label>
	</hbox>	
</vbox>
</pyvcp>
